{
  "extends": "airbnb/base",
  "globals": {
      "mat4": true,
      "vec3": true
  },
  "rules": {
    "indent": [2, 4],
    "comma-dangle": [1, "never"],
    "func-names": 0,
    "strict": 1,
    "padded-blocks": 0,
    "new-cap": [2, {
      "newIsCap": true,
      "capIsNewExceptions": ["Q"]
    }],
    "no-undef": 2,
    "no-console": 0,
    "no-nested-ternary": 0,
    "consistent-return": 0,
    "id-length": 0,
    "object-curly-spacing": 0,
    "max-len": 0,
    "one-var": 0,
    "space-before-function-paren": [2, "never"],
    "no-param-reassign": [2, {"props": false}],
    "arrow-body-style": 0,
    "prefer-template": 0,
    "quote-props": 0,
    "no-confusing-arrow": 0
  }
}
